@using Duende.IdentityServer.Extensions
@{
    #nullable enable
    string? name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}
@{
    var redirectUrl ="http://localhost:3000";
}


<div class="nav-page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-white">
    <div class="container-fluid">
        <a href="~/" class="navbar-brand d-flex align-items-center">
            <svg class="img-fluid" width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 13.5V5.5C6 4.39543 6.89543 3.5 8 3.5H9.5C10.6046 3.5 11.5 4.39543 11.5 5.5V13.5M6 13.5H18M6 13.5V18.5C6 19.6046 6.89543 20.5 8 20.5H16C17.1046 20.5 18 19.6046 18 18.5V13.5M18 13.5V9.5C18 8.39543 17.1046 7.5 16 7.5H14.5C13.3954 7.5 12.5 8.39543 12.5 9.5V13.5M11.5 13.5H12.5M11.5 13.5V16.5M12.5 13.5V16.5" stroke="#8B0000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <h1 class="h5 fw-bold text-dark ms-2 mb-0">
                Mazad Identity SSO  <br/><span class="h6 d-md-inline text-danger">(Clickbale only for dev purposes)</span>
            </h1>
        </a>

        @if (!string.IsNullOrWhiteSpace(name))
        {
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">@name <b class="caret"></b></a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-page="/Account/Logout/Index">Logout</a>
                    </div>
                </li>
            </ul>
        }
    </div>
</nav>
</div>

<div class="col-6 mx-auto mt-2">

<a role="button" href="@redirectUrl" class="btn btn-outline-dark w-100">Back to App</a>
</div>
